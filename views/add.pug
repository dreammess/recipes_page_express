extends layout.pug

block script
  script(type="text/javascript", src='/static/javascript/form.js')

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Add Recipe:

        // add recipe form
        form#recipeForm(method='POST' action='/recipes/add' name="recipeForm" onsubmit="return validateForm()")
          div.form-group
            select(name="category")
              option(value='pierogi') Pierogi
              option(value='soups') Soups
          div.form-group
            label(for='title') Title:
            input#email.form-control(type='text', placeholder='Yummy Recipe' name='title')

          //- Get an array of ingredients
          div#add-ingredient
            p#ingredient-btn.btn Add an ingredient
            input#ingredient-input(placeholder="Add an ingredient here")
            ul#ingredient-list
            input#ingredient-form-input(name='ingredients' style="display: none;")

          //- Get an array of instructions 
          div#add-instruction
            p#instruction-btn.btn Add an instruction
            input#instruction-input(placeholder="Add an instruction here")
            ul#instruction-list
            input#instruction-form-input(name='instructions' style="display: none;")

          input(type="button" onclick="validateForm()" value="Submit")